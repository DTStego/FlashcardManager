<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.screens.login.LoginScreenController">
   <children>
      <Label layoutX="115.0" layoutY="14.0" prefHeight="19.0" prefWidth="464.0" text="Sign In">
         <font>
            <Font size="34.0" />
         </font>
      </Label>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#dadada" height="3.0" layoutX="115.0" layoutY="73.0" stroke="TRANSPARENT" strokeType="INSIDE" width="677.0" />
      <VBox layoutX="115.0" layoutY="112.0" prefHeight="318.0" prefWidth="677.0" spacing="10.0">
         <children>
            <Label prefHeight="17.0" prefWidth="93.0" text="Username">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="usernameTextBox" onKeyPressed="#onUsernameKeyPress" promptText="Enter your username" />
            <Label text="Password">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <PasswordField fx:id="passTextBox" onKeyPressed="#onPassKeyPress" promptText="Enter your password" />
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Button fx:id="loginBtn" mnemonicParsing="false" onMouseClicked="#onLoginClick" text="Login" />
                  <Hyperlink fx:id="forgotPassBtn" onMouseClicked="#onForgotPassClick" text="Forgot password?" />
                  <Hyperlink fx:id="registerBtn" onMouseClicked="#onRegisterClick" prefHeight="29.0" prefWidth="303.0" text="Don't have an account? Create one!" />
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <Label fx:id="ErrorMsg" opacity="0.0" prefHeight="97.0" prefWidth="654.0" text="SampleErrorText" textFill="RED" />
         </children>
      </VBox>
   </children>
</AnchorPane>
