<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.screens.register.RegisterController">
   <children>
      <Button fx:id="backBtn" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#returnToLogin" prefHeight="42.0" prefWidth="81.0" text="Back">
         <font>
            <Font size="20.0" />
         </font></Button>
      <Label layoutX="124.0" layoutY="11.0" prefHeight="19.0" prefWidth="464.0" text="Register ">
         <font>
            <Font size="34.0" />
         </font>
      </Label>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#dadada" height="3.0" layoutX="124.0" layoutY="63.0" stroke="TRANSPARENT" strokeType="INSIDE" width="677.0" />
      <VBox layoutX="124.0" layoutY="78.0" prefHeight="336.0" prefWidth="677.0" spacing="10.0">
         <children>
            <TextField fx:id="usernameInput" prefHeight="31.0" prefWidth="284.0" promptText="Username">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <TextField fx:id="passwordInput" prefHeight="31.0" prefWidth="284.0" promptText="Password">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <TextField fx:id="security" prefHeight="31.0" prefWidth="284.0" promptText="Security Question">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <TextField fx:id="secAnswer" prefHeight="31.0" prefWidth="284.0" promptText="Answer">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <Button id="registerNewUser" mnemonicParsing="false" onAction="#registerUser" prefHeight="42.0" prefWidth="157.0" text="Register">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Label fx:id="errorLBL" prefHeight="123.0" prefWidth="681.0" textFill="#ff000083" />
         </children>
      </VBox>
   </children>
</AnchorPane>
