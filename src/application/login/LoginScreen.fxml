<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.login.LoginScreenController">
   <children>
      <Pane layoutY="-1.0" prefHeight="56.0" prefWidth="601.0">
         <children>
            <Text layoutX="145.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign In" wrappingWidth="456.0">
               <font>
                  <Font size="30.0" />
               </font>
            </Text>
         </children>
      </Pane>
      <Line endX="470.0" layoutX="115.0" layoutY="55.0" startX="-1.0" />
      <Pane layoutY="55.0" prefHeight="345.0" prefWidth="601.0">
         <children>
            <TextField fx:id="usernameTextBox" layoutX="113.0" layoutY="59.0" onKeyPressed="#onUsernameKeyPress" promptText="Enter your username" />
            <PasswordField fx:id="passTextBox" layoutX="113.0" layoutY="126.0" onKeyPressed="#onPassKeyPress" promptText="Enter your password" />
            <Label layoutX="113.0" layoutY="42.0" prefHeight="17.0" prefWidth="93.0" text="Username" />
            <Label layoutX="113.0" layoutY="109.0" text="Password" />
            <Button fx:id="loginBtn" layoutX="112.0" layoutY="173.0" mnemonicParsing="false" onMouseClicked="#onLoginClick" text="Login" />
            <Hyperlink fx:id="forgotPassBtn" layoutX="177.0" layoutY="174.0" onMouseClicked="#onForgotPassClick" text="Forgot password?" />
            <Hyperlink fx:id="registerBtn" layoutX="178.0" layoutY="200.0" onMouseClicked="#onRegisterClick" prefHeight="23.0" prefWidth="202.0" text="Don't have an account? Create one!" />
            <Label fx:id="ErrorMsg" layoutX="181.0" layoutY="194.0" opacity="0.0" prefHeight="17.0" prefWidth="161.0" text="SampleErrorText" textFill="RED" />
         </children>
      </Pane>
   </children>
</AnchorPane>
